<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context="com.sumitanantwar.android.android_xml_font_views.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:text="&#xef0a2; ~ Button ~ &#xef0a2;"
            app:font_name="FontAwesome.otf"/>

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Button"
            android:textSize="27dp"
            app:font_name="Heaven.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="&#xef0a4;"
            app:font_name="FontAwesome.otf"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="&#xef0a1;"
            app:font_name="FontAwesome.otf"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="&#xef0a2;"
            app:font_name="FontAwesome.otf"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="&#xef0a3;"
            app:font_name="FontAwesome.otf"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <com.sumitanantwar.android.android_xml_font_views.XMLFontButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:text="&#xef0a5;"
            app:font_name="FontAwesome.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sumitanantwar.android.android_xml_font_views.XMLTextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="Stylized TextView"
            app:font_name="SweetSensations.ttf"/>

    </LinearLayout>

</LinearLayout>
